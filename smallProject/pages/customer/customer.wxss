.customer{
  width: 100vw;
  height: 100vh;
  background: #f2f2f2;
  
}
.cusTop{
    padding: 0 4vw ;
    background: #ffffff;
    font-size: 0.95rem;
    color: #6a6a6a;
}
 .item{
    border-bottom: 1px solid #f2f2f2;
    padding: 3vh 0;
}
 .item image{
  margin-top: 0.8vh;
  width: 2vh;
  height: 2vh;
  float: right;
}
.item text:nth-of-type(2){
  float: right;
  margin-right: 2vw;
  font-size: 0.85rem;
  color: #a7a7a7;
}
.cusBottom{
    padding: 0 4vw ;
    margin-top: 2vh;
    background: #ffffff;
    font-size: 0.95rem;
    color: #6a6a6a;
}