.show{
  display: block;
}
.hide{
  display: none;
}
.paid{
  width: 100vw;
  height: 100vh;
}
.success{
  width: 100vw;
  text-align: center;
  padding: 5vh 0;
}
.success image{
  width: 15vw;
  height: 17vw;
}
.success text{
  margin-top: 5vh;
  display: block;
  text-align: center;
}
.error{
  width: 100vw;
  text-align: center;
  padding: 5vh 0;
}
.error image{
  width: 15vw;
  height: 17vw;
}
.error text{
  margin-top: 5vh;
  display: block;
  text-align: center;
}

.tipContent{
  margin: 4vh 0;
  width: 100vw;
  text-align: center;
   color: #d3d3d3;
  font-size: 0.95rem;
}
.tipContent .title{
  display: block;
  text-align: center;
  font-size: 1rem;
  margin: 5vh 0 2vh 0;
  color: #000000;
}
.tipContent .items{
  display: block;
}
.bottomBanner{
  width: 94vw;
  height: 20vh;
  position: fixed;
  bottom: 1vh;
  left: 3vw;
}
.bottomBanner image{
  width: 94vw;
  height: 20vh;
}
.complate{
  width: 100%;
  height: 12vh;
  position: relative;
}
.complate image{
  width: 97%;
  height: 12vh;
}
.complate text{
  display: block;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  text-align: center;
  height: 9vh;
  line-height: 9vh;
  font-size: 0.95rem;
  color: #fff;
}