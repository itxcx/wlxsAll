.feedback{
  width: 100vw;
  height: 100vh;
}
.feedbackContent{
  width: 94vw;
  margin: 1vh 3vw;
}
textarea{
  width: 100%;
   border-bottom: 2px solid #eeeeee;
  height: 20vh;
  font-size: 0.95rem;
}
.placeholder{
  font-size: 0.85rem;
}
.inputLength{
  margin: 0.5vh 0;
  text-align: right;
  color: #eeeeee;
}
.inputLength text:nth-of-type(1){
  color: #66D173;
}
.addFile{
  margin: 2vh 2vw;
}
.addFileBtn{
  display: inline-block;
  width: 28vw;
  height: 28vw;
}
.imageItem{
  display: inline-block;
  width: 27vw;
  height: 27vw;
  margin: 1vh 1.2vw;
  border: 1px solid #f2f2f2;
  border-radius: 4px;
}
.confirmBtn{
  width: 70vw;
  margin: 4vh 15vw;
  background: #66D173;
  border-radius: 20px;
  text-align: center;
  padding: 1.5vh 0;
  font-size: 0.95rem;
  color: #ffffff;
  box-shadow: 2px 5px 15px #999999;
}
.feedbackTip{
  font-size: 0.75rem;
  color: #7f7f7f;
  margin-top: 3vh;
  text-align: center;
}
.feedbackTip text{
  display: block;
}