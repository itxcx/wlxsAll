.show{
  display: block;
}
.hide{
  display: none;
}

.openDoor{
  width: 100vw;
  height: 100vh;
}
/*  openning  */
.openning, .openSuccess{
  margin-top: 4vh;
  text-align: center;
}
.openning image, .openSuccess image{
  width: 35vh;
  height: 35vh;
}
.openningContent, .openSuccessContent{
  margin-top: 5vh;
  font-size: 1.2rem;
}
.tipContent{
  margin: 4vh 0;
  width: 100vw;
  text-align: center;
   color: #d3d3d3;
    font-size: 0.8rem;
}
.tipContent .title{
  display: block;
  text-align: center;
  font-size: 0.9rem;
  margin: 5vh 0 2vh 0;
  color: #000000;
}
.tipContent .items{
  display: block;
}
.bottomBanner{
  width: 94vw;
  height: 20vh;
  position: fixed;
  bottom: 1vh;
  left: 3vw;
}
.bottomBanner image{
  width: 94vw;
  height: 20vh;
}
/* account  */
.account{
  margin-top: 4vh;
  text-align: center;
}
.accountImg{
  width: 100vw;
  text-align: center;
}
.accountImg image{
  width: 10vh;
  height: 11vh;
}
.detailInfo text:nth-of-type(1){
  display: block;
  font-size: 1.5rem;
}
.detailInfo text:nth-of-type(2){
  display: block;
  font-size: 0.7rem;
  color: #66D173;
  margin: 2vh 0;
}
.detailInfo text:nth-of-type(3){
  display: block;
  font-size: 0.7rem;
  color: #d3d3d3;
  margin: 2vh 0;
}
.accountBtn{
  margin-top: 8vh;
}
.accountBtn text{
    display: inline-block;
    padding: 1vh 8vw;
    border: 1px solid #66D173;
    border-radius: 20px;
    font-size: 0.75rem;
    color: #66D173;
}
.accountBtn text:nth-of-type(2) {
  margin-left: 10vw;
}
