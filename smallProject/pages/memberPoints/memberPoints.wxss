.memberPoints{
  width: 100%;
  height: 100vh;
  background: #66D173;
  position: relative;
}
.pointHeader{
  width: 100vw;
  height: 30vh;
  position: relative;
  color: #ffffff;
}
.pointHeader image{
  width: 100vw;
  height: 30vh;
  position: absolute;
  top: 0;
  left: 0;
}
.pointHeader view{
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 7vh;
}
.pointHeader view text:nth-of-type(1){
  display: block;
  font-size: 1.6rem;
  font-weight: 600;
}
.pointHeader view text:nth-of-type(2){
  display: block;
  font-size: 0.6rem;
}
.pointHeader>text{
  font-size: 0.8rem;
  width: 100%;
  display: block;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 2vh; 
}
.pointContent{
  height: 64vh;
  width: 88vw;
  margin: -0.2vh 3vw 2vh 3vw;
  background: #ffffff;
  border-radius: 5px;
  overflow: auto;
  padding: 2vh 3vw;
}
.pointsItem{
  border-bottom: 1px solid #F2F2F2;
  padding: 2vh 0;
  overflow: hidden;
  height: 8vh;
}
.getType{
  width: 70vw;
  float: left;
}
.getType text:nth-of-type(1){
  display: block;
  font-size: 0.95rem;
}
.getType text:nth-of-type(2){
  display: block;
  margin-top: 1vh;
  font-size: 0.7rem;
  color: #B2B2B2;
}
.pointNum{
  width: 10vw;
  height: 8vh;
  line-height: 8vh;
  float: right;
  color: #66D173;
}
.pointRuleHide{
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0; 
  left: 0;
  z-index: 999;
  transform: translateY(-100vh);
}
.pointRuleHide image{
  width: 80.3vw;
  height: 28vh;
  position: absolute;
  top:0;
  left: 10vw;
  z-index: 1;
}
.ruleTitleText{
  width: 100vw;
  position: absolute;
  top: 19vh;
  left: 0;
  text-align: center;
  display: block;
  z-index: 2;
  color: #ffffff;
  font-size: 1.2rem;
  
}
.ruleContent{
  width: 76vw;
  height: 40vh;
  background: #ffffff;
  position: absolute;
  top: 27.5vh;
  left: 10vw;
  border-radius: 5px;
  padding: 3vh 2vw;
  font-size: 0.85rem;
  color: #A5A5A5;
}
.contentItem{
  margin: 0.8vh 5vw;
}
.commonText{
  display: block;
  font-size: 0.65rem;
  margin: 2vh 0 2vh 6vw;
}
.specialItem text:nth-of-type(1){
    font-size: 1rem;
    color: #66D173;
}
.specialItem text:nth-of-type(2){
    font-size: 0.8rem;
    color: #737373;
    margin-left: 2vw;
}

.ruleHideBtn{
  width: 70vw;
  height: 7vh;
  position: absolute;
  bottom: 12vh;
  left: 15vw;
  color: #ffffff;
  border-radius: 20px;
  text-align: center;
  font-size: 0.85rem;
  line-height: 7vh;
  background: #66D173;
}
.bg{
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: absolute;
  top: 0;
  left: 0;
}
.bgShwo{
  display: block;
}
.bgHide{
  display: none;
}