.issue{
  margin: 5rpx;
}
.issue_list_content{
  list-style: none;
}
.list{
 padding: 10rpx;
  clear: both;
  border-bottom: 2px solid #e4e4e4;
}
.list:nth-last-of-type(1){
  border: none;
}
.page_title{
  text-align: center;
  font-size: 18px;
  font-weight: 600;
}
.issue_title{
  font-size: 16px;
  font-weight: 400;
  margin: 20rpx 10rpx;
}
li{
  display: block;
  clear: both;
}
.issue_image{
  width: 20px;
  height: 20px;
}
.issue_content{
  padding: 0 20rpx;
  font-size: 14px;
  background: #f5f5f5;
  border-radius: 5px;
}
.content_list li{
  padding-left: 20rpx;
  font-size: 14px;
  margin: 10rpx 0;
}
