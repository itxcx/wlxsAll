
  .swiper-tab{  
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #F7F7F7; 
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0; 
    z-index: 99;
    }  
    .tab-item{
      width: 33.33%;
      text-align: center;
      display: inline-block;
      }
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
  }  
.on{
   color: #66D173;
   position: relative;
    }  
  .on:after{
     content: "";
      display: block;
      height: 8rpx;
      width: 52rpx;
      background: #66D173;
      position: absolute; 
      bottom: 0;
      left: 40%;
      border-radius: 16rpx;
  }  
.swiper-box{ 
    display: block; 
    height: 100%;
    width: 100%; 
    overflow: hidden;
    margin-top: 10vh;
 }  
.swiper-box view{  
    text-align: center;  
}  