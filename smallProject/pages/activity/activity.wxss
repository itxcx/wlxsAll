.activity{
  width: 100vw;
  height: 100vh;
  background: #ffffff;
}
.activityImg{
  margin: 11.994vh 0 7.871vh 0;
}
.activityImg image{
  display: block;
  width:  48.933vw;
  height:  27.511vh;
  margin: 0 auto;
}
.activityContent{
  text-align: center;
}
.activityContent text:nth-of-type(1) {
  display: block;
  font-size: 2.548vh;
  color: rgba(36,35,35,.93);
}
.activityContent text:nth-of-type(2) {
  display: block;
  font-size: 2.0989vh;
  color: #c4c4c4;
  margin-top: 1.57vh;
}
.openBtn{
  margin-top: 8.0209vh;
  position: relative;
}
.openBtn text{
  display: block;
  width:  26.6667vw;
  height: 5.847vh;
  margin: 0 auto;
  font-size: 2.0989vh;
  background: #66D173;
  text-align: center;
  border-radius: 20px;
  line-height: 5.847vh;
  color: rgba(255,255,255,.93);
}
.modal{
    background: rgba(0,0,0,0);
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0; 
    left: 0;
    z-index: 100;
}
.show{
  display: block;
}
.hide{
  display: none;
}