.coupon{
  width: 100%;
  height: 100vh;
  padding: 2vh 2vw;
  background: #F1F1F1;
  overflow: auto;
}
.couponItem{
  height: 20vh;
  position: relative;
}
.couponItem image{
  width: 96vw;
  height: 20vh;
}
.couponItemContent{
  position: absolute;
  padding: 1vh 3vw;
  top: 0;
  left: 0;
}
.amount{
  width: 15vw;
  float: left;
  color: #66D173;
  height: 15vh;
}
.amount>view{
  position: relative;
}
.amount text:nth-child(1){
  position: absolute;
  top: 2.2vh;
  left: 0;
}
.amount text:nth-child(2){
  display: inline-block;
  font-size: 2rem;
  margin-top: 1.2vh;
  position: absolute;
  font-weight: 600;
  top: 0;
  left: 4vw;
}
.content{
  width: 45vw;
  float: left;
  padding: 2vh 0 2vh 5vw;
}
.content text:nth-of-type(1){
  display: block;
  font-size: 1rem;
}
.content text:nth-of-type(2),.content text:nth-of-type(3){
  font-size: 0.8rem;
  margin-top: 3vh;
  color: #A3A3A3;
}
.used{
  width: 25vw;
  float: left;
  padding: 2vh 0;
  text-align: center;
}
.used text:nth-of-type(1){
  display: block;
  font-size: 0.7rem;
  color: #66D173;
   font-weight: 600;

}
.used text:nth-of-type(2){
  margin-top: 0.5vh;
  display: inline-block;
  font-size: 0.8rem;
  background: #66D173;
  color:#ffffff;
  padding: 0.7vh 3vw;
  border-radius: 20px;
}
.couponItemDate{
  position: absolute;
  padding: 2vh 5vw;
  font-size: 0.75rem;
  bottom: 0;
  left: 0;
  color: #A3A3A3;
}
.tip{
  margin: 2vh 0;
  text-align: center;
  font-size: 0.85rem;
  color: #3d3d3d;
}