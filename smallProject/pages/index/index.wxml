<!--index.wxml-->
<view class="index">
<view class="banner">
  <swiper indicator-dots="{{indicatorDots}}"  indicator-color="{{indicatorColor}}"  indicator-active-color="{{indicatorActiveColor}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="false">  
        <block wx:for="{{imgUrls}}" wx:key="unique">  
          <swiper-item>  
            <navigator url="{{item.link}}" hover-class="navigator-hover">  
              <image src="{{item.url}}" class="slide-image"/>  
            </navigator>   
          </swiper-item>  
        </block>  
  </swiper>
</view>
<view class="content">
  <image src="{{contentImg}}"></image>
  <text style="display: block;">购物完成后记得关闭柜门哦!</text>
</view>
<view class="footer">
    <view class="index-service"><image src="../../images/index/bt_kehufuwu.png" bindtap="callService"></image></view>
    <view class="index-scan"  bindtap="openDoorScan"><image src="../../images/index/bt_open.png"></image></view>
    <view class="index-setting"><image src="../../images/index/bt_gerenzhongxin.png" bindtap="goUserInfo"></image></view>
</view>
    <button open-type="getUserInfo" bindgetuserinfo="userInfoHandler" class="authorize {{fail ? 'hide': 'show'}}"></button> 
  </view>


